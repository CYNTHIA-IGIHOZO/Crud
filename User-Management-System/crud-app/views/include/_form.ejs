<form method="POST" id="add_user">
  <div class="new_user">
  <div class="form-group">
    <label for="name" class="text-light">Name</label>
    <input type="text" name="name" value="Mark Stoenis">
  </div>
  
  <div class="form-group">
    <label for="email" class="text-light">Email</label>
    <input type="text" name="email" value="example@gmail.com">
  </div>
  
  <div class="form-group">

    <label class="text-light">Gender</label>
    <div class="radio inline">
      <input type="radio" id="female" name="gender" value="Female" checked>
      <label for="female" class="text-light">Female</label>
    </div>
    <div class="radio inline">
      <input type="radio" id="male" name="gender" value="Male">
      <label for="male" class="text-light">Male</label>
    </div>
  </div>
  
  <div class="form-group">
    <label for="status" class="text-light">Status</label>
    <select id="status" name="status">
      <option value="Active" selected>Active</option>
      <option value="Inactive">Inactive</option>
    </select>
  </div>
  
  <div class="form-group btn">
    <button type="submit" class="save-btn">Save</button>
  </div>
  </div>
  </form>